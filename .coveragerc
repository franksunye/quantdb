[run]
source = core,api
omit =
    # Core module exclusions
    core/utils/config.py
    core/utils/logger.py
    core/cache/akshare_adapter_old.py
    core/cache/akshare_adapter_complex.py.bak

    # API module exclusions
    api/openapi/openapi_utils.py
    api/openapi/swagger_ui.py
    api/openapi/redoc_ui.py
    api/openapi/swagger_ui_bundle.py
    api/openapi/redoc_bundle.py
    api/openapi/swagger_ui_redirect.py
    api/openapi/swagger_ui_html.py
    api/openapi/redoc_html.py
    api/openapi/swagger_ui_css.py
    api/openapi/swagger_ui_js.py
    api/openapi/redoc_js.py
    api/openapi/swagger_ui_presets.py
    api/openapi/swagger_ui_standalone_preset.py
    api/openapi/swagger_ui_favicon*.py

    # Test files
    tests/*

    # Cloud deployment specific files
    cloud/*

    # Scripts and tools
    scripts/*
    tools/*

[report]
exclude_lines =
    pragma: no cover
    def __repr__
    raise NotImplementedError
    if __name__ == .__main__.:
    pass
    raise ImportError
    except ImportError
    raise NotImplementedError
    if TYPE_CHECKING:
    @abstractmethod
    @abc.abstractmethod
    class .*\bProtocol\):
    @(typing\.)?overload

[html]
directory = coverage_html_report
title = QuantDB Coverage Report
